{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "allowJs": true,  // vite-tsconfig-paths doesn't work if it's not enabled
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@global/*": ["../global/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
